<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Math Master"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7" />

    <Button
        android:id="@+id/Learn"
        style="@style/MenuButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Learn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7" />

    <Button
        android:id="@+id/Practice"
        style="@style/MenuButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Practice"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Learn"
        app:layout_constraintWidth_percent="0.7" />

    <Button
        android:id="@+id/Challenge"
        style="@style/MenuButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Challenge"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Practice"
        app:layout_constraintWidth_percent="0.7" />

    <Button
        android:id="@+id/Tools"
        style="@style/MenuButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Tools"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Challenge"
        app:layout_constraintWidth_percent="0.7" />

    <Button
        android:id="@+id/Statistics"
        style="@style/MenuButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Statistics"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tools"
        app:layout_constraintWidth_percent="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>